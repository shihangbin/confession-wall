{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^u--(.*)": "uview-plus/components/u-$1/u-$1.vue",
      "^up-(.*)": "uview-plus/components/u-$1/u-$1.vue",
      "^u-([^-].*)": "uview-plus/components/u-$1/u-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "能源表白墙",
        "navigationBarBackgroundColor": "#fff",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/index/article/article",
      "style": {
        "navigationBarTitleText": "详情",
        "navigationBarBackgroundColor": "#fff"
      }
    },
    {
      "path": "pages/study/study",
      "style": {
        "navigationBarTitleText": "校园分享",
        "navigationBarBackgroundColor": "#fff",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/study/details/details",
      "style": {
        "navigationBarTitleText": "详情",
        "navigationBarBackgroundColor": "#fff"
      }
    },
    {
      "path": "pages/user/user",
      "style": {
        "navigationBarTitleText": "我的",
        "navigationBarBackgroundColor": "#fff",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/user/user/user",
      "style": {
        "enablePullDownRefresh": false,
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/user/update/update",
      "style": {
        "navigationBarTitleText": "用户信息修改",
        "navigationBarBackgroundColor": "#fff",
        "navigationBarTextStyle": "black",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/user/release/like",
      "style": {
        "navigationBarTitleText": "我的喜欢",
        "navigationBarBackgroundColor": "#fff",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/user/release/article",
      "style": {
        "navigationBarTitleText": "我的文章",
        "navigationBarBackgroundColor": "#fff",
        "enablePullDownRefresh": true
      }
    }
  ],
  "subPackages": [
    {
      "root": "pages-login",
      "pages": [
        {
          "path": "login/login",
          "style": {
            "enablePullDownRefresh": false,
            "navigationBarTitleText": "登录"
          }
        },
        {
          "path": "sign-up/sign-up",
          "style": {
            "enablePullDownRefresh": false,
            "navigationBarTitleText": "注册"
          }
        }
      ]
    },
    {
      "root": "pages-publish",
      "pages": [
        {
          "path": "article/article",
          "style": {
            "enablePullDownRefresh": false,
            "navigationBarTitleText": "文章发布"
          }
        },
        {
          "path": "study/study",
          "style": {
            "enablePullDownRefresh": false,
            "navigationBarTitleText": "分享发布"
          }
        }
      ]
    }
  ],
  "preloadRule": {
    "pages-login/login/login": {
      "network": "all",
      "packages": ["pages-login"]
    },
    "pages-login/sign-up/sign-up": {
      "network": "all",
      "packages": ["pages-login"]
    },
    "pages-publish/article/article": {
      "network": "all",
      "packages": ["pages-publish"]
    },
    "pages-publish/study/study": {
      "network": "all",
      "packages": ["pages-publish"]
    }
  },
  "tabBar": {
    "color": "#333",
    "selectedColor": "#7A57D1",
    "borderStyle": "black",
    "list": [
      {
        "pagePath": "pages/index/index",
        "iconPath": "static/tabBar/index.png",
        "selectedIconPath": "static/tabBar/index-active.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/study/study",
        "iconPath": "/static/tabBar/study.png",
        "selectedIconPath": "/static/tabBar/study-active.png",
        "text": "分享"
      },
      {
        "pagePath": "pages/user/user",
        "iconPath": "static/tabBar/user.png",
        "selectedIconPath": "static/tabBar/user-active.png",
        "text": "我的"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "能源表白墙",
    "navigationBarBackgroundColor": "#fff",
    "backgroundColor": "#fff"
  }
}
